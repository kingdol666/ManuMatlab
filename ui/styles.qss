/* ========== RESPONSIVE DESIGN RULES ========== */
/* These rules help adapt the UI for different screen sizes */

/* Large screens (1920px and above) - Desktop */
QWidget[class="large-screen"] {
    font-size: 16px;
    padding: 16px;
    margin: 8px;
}

QWidget[class="large-screen"] QLabel {
    font-size: 16px;
    line-height: 1.6;
}

QWidget[class="large-screen"] QPushButton {
    min-height: 48px;
    font-size: 16px;
    padding: 12px 24px;
}

/* Medium screens (1366px - 1919px) - Standard Desktop */
QWidget[class="medium-screen"] {
    font-size: 14px;
    padding: 12px;
    margin: 6px;
}

QWidget[class="medium-screen"] QLabel {
    font-size: 14px;
    line-height: 1.5;
}

QWidget[class="medium-screen"] QPushButton {
    min-height: 40px;
    font-size: 14px;
    padding: 10px 20px;
}

/* Small screens (1024px - 1365px) - Laptop */
QWidget[class="small-screen"] {
    font-size: 13px;
    padding: 10px;
    margin: 4px;
}

QWidget[class="small-screen"] QLabel {
    font-size: 13px;
    line-height: 1.4;
}

QWidget[class="small-screen"] QPushButton {
    min-height: 36px;
    font-size: 13px;
    padding: 8px 16px;
}

/* Extra small screens (below 1024px) - Tablet/Small Laptop */
QWidget[class="xs-screen"] {
    font-size: 12px;
    padding: 8px;
    margin: 2px;
}

QWidget[class="xs-screen"] QLabel {
    font-size: 12px;
    line-height: 1.3;
}

QWidget[class="xs-screen"] QPushButton {
    min-height: 32px;
    font-size: 12px;
    padding: 6px 12px;
}

/* High DPI Display Support */
QWidget[class="high-dpi"] {
    /* Increase base sizes for high DPI displays */
    font-size: 15px;
}

QWidget[class="high-dpi"] QLabel {
    font-size: 15px;
}

QWidget[class="high-dpi"] QPushButton {
    min-height: 44px;
    font-size: 15px;
}

/* Accessibility - Large Text Mode */
QWidget[class="large-text"] {
    font-size: 18px;
}

QWidget[class="large-text"] QLabel {
    font-size: 18px;
    line-height: 1.6;
}

QWidget[class="large-text"] QPushButton {
    min-height: 52px;
    font-size: 18px;
    padding: 14px 28px;
}

/* Touch-friendly interface for tablet mode */
QWidget[class="touch-mode"] QPushButton {
    min-height: 48px;
    min-width: 48px;
    padding: 12px;
    margin: 8px;
}

QWidget[class="touch-mode"] QComboBox,
QWidget[class="touch-mode"] QLineEdit,
QWidget[class="touch-mode"] QTextEdit {
    min-height: 44px;
    padding: 12px 16px;
    font-size: 16px;
}

