/* Enhanced Glass Morphism Style - Optimized Typography & Accessibility */
QMainWindow#MainWindow {
    /* 毛玻璃背景效果 - Enhanced contrast for better readability */
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(255, 255, 255, 0.35),
        stop:0.3 rgba(236, 244, 255, 0.40),
        stop:0.6 rgba(209, 229, 255, 0.45),
        stop:1 rgba(186, 219, 255, 0.38));
    /* Enhanced font stack for better cross-platform compatibility */
    font-family: "Inter", "SF Pro Display", "Segoe UI Variable", "Microsoft YaHei UI", "PingFang SC", "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #0f172a;
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 20px;
}

QMainWindow {
    /* 背景图片设置 */
    border-image: url(public/images/background1.png) 0 0 0 0 stretch stretch;
    /* 毛玻璃主背景叠加层 */
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(255, 255, 255, 0.08), 
        stop:0.3 rgba(240, 248, 255, 0.12), 
        stop:0.7 rgba(219, 234, 254, 0.15), 
        stop:1 rgba(186, 230, 253, 0.08));
    border-radius: 24px;
}

/* Add a style for responsive image widgets, assuming they are QLabels with a specific object name */
QLabel#responsiveImage {
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain; /* or 'cover' depending on desired effect */
    border: none;
}


QDialog {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(255, 255, 255, 0.85), 
        stop:0.5 rgba(248, 250, 252, 0.90), 
        stop:1 rgba(241, 245, 249, 0.85));
    font-family: "Inter", "SF Pro Display", "Segoe UI Variable", "Microsoft YaHei UI", "PingFang SC", "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #0f172a;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 24px;
}

/* Modern Semi-Transparent Tab Styles with Glass Effect */
QTabWidget::pane {
    border: none;
    border-radius: 20px;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(255, 255, 255, 0.45), stop:0.5 rgba(248, 250, 252, 0.45), stop:1 rgba(241, 245, 249, 0.45));
    border: 1px solid rgba(255, 255, 255, 0.3);
    margin-top: 12px;
}

QTabBar::tab {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(248, 250, 252, 0.45), stop:1 rgba(241, 245, 249, 0.45));
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-bottom: none;
    padding: 12px 20px;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
    color:rgb(48, 48, 52);
    font-weight: 600;
    font-size: 14px;
    margin-right: 4px;
    min-width: 100px;
}

QTabBar::tab:selected {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(255, 255, 255, 0.55), stop:1 rgba(248, 250, 252, 0.55));
    border: 1px solid rgba(59, 130, 246, 0.6);
    color: #1e40af;
    border-bottom: 3px solid rgba(59, 130, 246, 0.6);
}

QTabBar::tab:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(239, 246, 255, 0.50), stop:1 rgba(219, 234, 254, 0.50));
    color: #2563eb;
    border-color: rgba(59, 130, 246, 0.4);
}

/* Modern Semi-Transparent GroupBox Styles with Glass Effect */
QGroupBox {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(255, 255, 255, 0.30), stop:0.5 rgba(248, 250, 252, 0.30), stop:1 rgba(241, 245, 249, 0.30));
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 20px;
    margin-top: 24px;
    padding: 20px;
    font-weight: 500;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 10px 16px;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(219, 234, 254, 0.4), stop:1 rgba(186, 230, 253, 0.4));
    border: 1px solid rgba(59, 130, 246, 0.5);
    color: #1e40af;
    font-size: 15px;
    font-weight: 700;
    border-radius: 12px;
    left: 20px;
    top: 0px;
}

/* Modern Semi-Transparent Button Styles with Glass Effect */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(99, 102, 241, 0.65),
        stop:0.5 rgba(79, 70, 229, 0.65),
        stop:1 rgba(67, 56, 202, 0.65));
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.6);
    padding: 6px 12px;
    margin: 4px;
    border-radius: 14px;
    font-size: 14px;
    font-weight: 600;
    min-width: 150px;
    max-width: 150px;
    min-height: 36px;
    max-height: 36px;
    width: 150px;
    height: 36px;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(37, 99, 235, 0.75), stop:0.5 rgba(29, 78, 216, 0.75), stop:1 rgba(30, 64, 175, 0.75));
    border: 1px solid rgba(255, 255, 255, 0.7);
    /* 悬停时保持一致尺寸 */
    min-width: 150px;
    max-width: 150px;
    min-height: 36px;
    max-height: 36px;
    width: 150px;
    height: 36px;
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(30, 64, 175, 0.85), stop:0.5 rgba(30, 58, 138, 0.85), stop:1 rgba(30, 58, 138, 0.85));
    border: 1px solid rgba(255, 255, 255, 0.8);
    /* 按下时保持一致尺寸 */
    min-width: 150px;
    max-width: 150px;
    min-height: 36px;
    max-height: 36px;
    width: 150px;
    height: 36px;
}

