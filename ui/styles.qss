/* Modern Semi-Transparent Input Control Styles with Glass Effect */
/* Enhanced Input Components - Better Accessibility & Modern Design */
QTextEdit, QLineEdit, QDoubleSpinBox, QComboBox, QSpinBox {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, 
        stop:0 rgba(255, 255, 255, 0.75), 
        stop:1 rgba(248, 250, 252, 0.75));
    border: 2px solid rgba(203, 213, 225, 0.6);
    border-radius: 12px;
    padding: 12px 16px;
    font-family: "Inter", "SF Pro Display", "Segoe UI Variable", "Microsoft YaHei UI", "PingFang SC", "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #0f172a;
    min-width: 200px;
    min-height: 20px;
    selection-background-color: rgba(59, 130, 246, 0.25);
    selection-color: #ffffff;
}

QDoubleSpinBox::up-button, QSpinBox::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right;
    width: 20px;
    height: 20px;
    image: url(public/images/up.png);
    background: transparent;
    border: none;
    right: 5px;
    top: 4px;
}

QDoubleSpinBox::down-button, QSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    width: 20px;
    height: 20px;
    image: url(public/images/down.png);
    background: transparent;
    border: none;
    right: 5px;
    bottom: 4px;
}

/* Enhanced Focus & Hover States for Better UX */
QTextEdit:focus, QLineEdit:focus, QDoubleSpinBox:focus, QComboBox:focus {
    border: 2px solid rgba(59, 130, 246, 0.8);
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, 
        stop:0 rgba(255, 255, 255, 0.9), 
        stop:1 rgba(239, 246, 255, 0.9));
    outline: none;
}

QTextEdit:hover, QLineEdit:hover, QDoubleSpinBox:hover, QComboBox:hover {
    border-color: rgba(59, 130, 246, 0.6);
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, 
        stop:0 rgba(255, 255, 255, 0.85), 
        stop:1 rgba(248, 250, 252, 0.85));
}

QComboBox::drop-down {
    border: none;
    border-left: 2px solid rgba(255, 255, 255, 0.3);
    width: 36px;
    border-top-right-radius: 12px;
    border-bottom-right-radius: 12px;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(248, 250, 252, 0.3), stop:1 rgba(241, 245, 249, 0.3));
}

QComboBox::down-arrow {
    image: url(public/images/select.png);
    width: 14px;
    height: 14px;
}

/* Enhanced Table Styles - Improved Data Readability */
QTableWidget {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, 
        stop:0 rgba(255, 255, 255, 0.85), 
        stop:1 rgba(248, 250, 252, 0.85));
    border: 2px solid rgba(203, 213, 225, 0.6);
    border-radius: 16px;
    gridline-color: rgba(203, 213, 225, 0.3);
    font-family: "Inter", "SF Pro Display", "Segoe UI Variable", "Microsoft YaHei UI", "PingFang SC", "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #0f172a;
    selection-background-color: rgba(59, 130, 246, 0.2);
    selection-color: #ffffff;
    alternate-background-color: rgba(248, 250, 252, 0.5);
}

/* Enhanced Table Header & Cell Styles */
QHeaderView::section {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, 
        stop:0 rgba(59, 130, 246, 0.12), 
        stop:1 rgba(59, 130, 246, 0.08));
    padding: 16px 12px;
    border: none;
    border-bottom: 2px solid rgba(59, 130, 246, 0.3);
    font-family: "Inter", "SF Pro Display", "Segoe UI Variable", "Microsoft YaHei UI", "PingFang SC", "Helvetica Neue", Arial, sans-serif;
    font-weight: 600;
    font-size: 14px;
    color: #1e40af;
    border-top-left-radius: 14px;
    border-top-right-radius: 14px;
}

QTableWidget::item {
    padding: 16px 12px;
    background-color: transparent;
    border-bottom: 1px solid rgba(203, 213, 225, 0.3);
    font-family: "Inter", "SF Pro Display", "Segoe UI Variable", "Microsoft YaHei UI", "PingFang SC", "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #0f172a;
}

QTableWidget::item:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 rgba(59, 130, 246, 0.1), 
        stop:1 rgba(59, 130, 246, 0.15));
    border-radius: 8px;
    color: #1e40af;
}

QTableWidget::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 rgba(59, 130, 246, 0.2), 
        stop:1 rgba(59, 130, 246, 0.3));
    color: #ffffff;
    border-radius: 8px;
    font-weight: 500;
}

/* Enhanced Label Styles - Improved Typography Hierarchy */
QLabel {
    font-family: "Inter", "SF Pro Display", "Segoe UI Variable", "Microsoft YaHei UI", "PingFang SC", "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #0f172a;
    background-color: transparent;
}

/* Label hierarchy for better information structure */
QLabel[class="title"] {
    font-size: 18px;
    font-weight: 600;
    color: #0f172a;
    margin-bottom: 8px;
}

QLabel[class="subtitle"] {
    font-size: 16px;
    font-weight: 500;
    color: #334155;
    margin-bottom: 6px;
}

QLabel[class="caption"] {
    font-size: 12px;
    font-weight: 400;
    color: #64748b;
    line-height: 1.3;
}

QLabel[class="status"] {
    font-size: 13px;
    font-weight: 500;
    padding: 4px 8px;
    border-radius: 6px;
    background: rgba(59, 130, 246, 0.1);
    color: #1e40af;
}

/* Enhanced Log Text Box */
QTextEdit#log_text {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, 
        stop:0 rgba(30, 41, 59, 0.95), 
        stop:1 rgba(15, 23, 42, 0.95));
    color: #e2e8f0;
    font-family: "JetBrains Mono", "Consolas", "Fira Code", "Courier New", monospace;
    border-radius: 16px;
    border: 2px solid rgba(59, 130, 246, 0.3);
    padding: 16px;
    font-size: 13px;
}

/* Modern Glass ScrollBar */
QScrollBar:vertical {
    background: rgba(255, 255, 255, 0.15);
    width: 10px;
    margin: 16px 2px 16px 2px;
    border-radius: 5px;
}
QScrollBar::handle:vertical {
    background: rgba(99, 102, 241, 0.55);
    min-height: 30px;
    border-radius: 5px;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}
QScrollBar:horizontal {
    background: rgba(255, 255, 255, 0.15);
    height: 10px;
    margin: 2px 16px 2px 16px;
    border-radius: 5px;
}
QScrollBar::handle:horizontal {
    background: rgba(99, 102, 241, 0.55);
    min-width: 30px;
    border-radius: 5px;
}
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}
/* Table Header */
QHeaderView::section {
    background: rgba(255, 255, 255, 0.4);
    padding: 6px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    font-weight: 600;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 rgba(59, 130, 246, 0.6), 
        stop:1 rgba(59, 130, 246, 0.8));
    width: 14px;
}

QScrollBar::handle:vertical:pressed {
