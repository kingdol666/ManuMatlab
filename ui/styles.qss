        stop:0 rgba(59, 130, 246, 0.8), 
        stop:1 rgba(59, 130, 246, 1.0));
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background: rgba(248, 250, 252, 0.4);
    height: 12px;
    border-radius: 6px;
    margin: 0;
    border: 1px solid rgba(203, 213, 225, 0.2);
    /* Responsive height for different screen sizes */
    min-height: 8px;
    max-height: 16px;
}

QScrollBar::handle:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(59, 130, 246, 0.4), stop:1 rgba(59, 130, 246, 0.6));
    border-radius: 6px;
    min-width: 30px;
    margin: 1px;
}

QScrollBar::handle:horizontal:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, 
        stop:0 rgba(59, 130, 246, 0.6), 
        stop:1 rgba(59, 130, 246, 0.8));
    height: 14px;
}

QScrollBar::handle:horizontal:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, 
        stop:0 rgba(59, 130, 246, 0.8), 
        stop:1 rgba(59, 130, 246, 1.0));
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Glass Morphism Progress Bar Styles - QSS Compatible */
QProgressBar {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(241, 245, 249, 0.4), 
        stop:1 rgba(248, 250, 252, 0.45));
    border: 1px solid rgba(255, 255, 255, 0.18);
    border-radius: 16px;
    text-align: center;
    font-weight: bold;
    color: #1e293b;
    min-height: 32px;
    font-size: 13px;
}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 rgba(59, 130, 246, 0.8), 
        stop:0.3 rgba(37, 99, 235, 0.85), 
        stop:0.7 rgba(29, 78, 216, 0.85),
        stop:1 rgba(59, 130, 246, 0.8));
    border-radius: 14px;
    margin: 2px;
}

/* Enhanced CheckBox Styles */
QCheckBox {
    spacing: 12px;
    font-size: 14px;
    color: #1e293b;
    font-weight: 500;
}

QCheckBox::indicator {
    width: 22px;
    height: 22px;
    image: url(public/images/uncheck.png);
    border: none;
    background-color: transparent;
}

QCheckBox::indicator:checked {
    background: transparent;
    border: none;
    image: url(public/images/check.png);
}

QCheckBox::indicator:hover {
    border: 2px solid rgba(37, 99, 235, 0.9);
}

